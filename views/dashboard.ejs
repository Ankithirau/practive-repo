<%- include('./partials/Header.ejs') %>
    <!-- Main content -->
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-3">
                <!-- Sidebar -->
                <div class="card">
                    <div class="card-header">
                        Dashboard
                    </div>
                    <!-- <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/create">Create User</a></li>
                    </ul> -->
                </div>
            </div>
            <div class="col-md-9">
                <!-- Content -->
                <div class="card">
                    <div class="card-header">
                        Content
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Welcome to your dashboard </h5>
                    </div>

                </div>
                <div class="card mt-4">

                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Year</th>
                                <th>Color</th>
                                <th>Pantone Value</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <% let i=1; %>
                        <% result?.data.forEach(function(data){ %>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= data.name %></td>
                            <td><%= data.year %></td>
                            <td bgcolor="<%= data.color %>"><font color="white"><%= data.color %></font></td>
                            <td><%= data.pantone_value %></td>
                        </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>