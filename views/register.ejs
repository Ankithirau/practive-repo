<%- include('./partials/Header.ejs') %>
  <div class="container pb-2">
    <div class="row justify-content-center">
      <div class="col-sm-6 col-md-4">
        <% if (typeof errors !=='undefined' ) { %>
          <div class="alert alert-danger">
            <% errors.forEach(error=> { %>
              <%= error %>
                <% }); %>
          </div>
          <% } %>
            <% if (typeof msg !=='undefined' ) { %>
              <div class="alert alert-<%= status==200?'success':'danger'  %>">
                <%= msg %>
              </div>
              <% } %>
              
                <div class="card mt-2">
                  <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form action="/register-user" method="post">
                      <div class="form-group">
                        <label for="email">Email address</label>
                        <input name="email" type="email" class="form-control" id="email" placeholder="Enter email"
                          value="<%= (typeof formData !=='undefined' )?formData.email:'' %>">
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password"
                          value="<%= (typeof formData !=='undefined' )?formData.password:'' %>">
                      </div>
                      <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" name="confirmPassword" class="form-control" id="confirmPassword"
                          placeholder="Confirm Password" value="<%= (typeof formData!=='undefined' )?formData.confirmPassword:'' %>">
                      </div>
                      <span>Already have a account Click Here: <a href="/login" class="text-primary">Login</a></span>
                      <button type="submit" class="btn btn-primary btn-block mt-1">Submit</button>
                    </form>
                  </div>
                </div>
      </div>
    </div>
  </div>

  <%- include('./partials/Footer.ejs') %>