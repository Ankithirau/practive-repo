<%- include('../partials/Header.ejs') %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% if (typeof errors !=='undefined' ) { %>
                    <div class="alert alert-danger">
                      <% errors.forEach(error=> { %>
                        <%= error %>
                          <% }); %>
                    </div>
                <% } %>
                    <% if (typeof msg !=='undefined' ) { %>
                    <div class="alert alert-<%= status==200?'success':'danger'  %>">
                          <%= msg %>
                    </div>
                <% } %>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title text-center">Create Users</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/create-user">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= (typeof formData !=='undefined' )?formData.name:'' %>">
                            </div>
                            <div class="form-group">
                                <label for="job">Job</label>
                                <input type="text" class="form-control" id="job" name="job" value="<%= (typeof formData !=='undefined' )?formData.job:'' %>">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</body>
</html>